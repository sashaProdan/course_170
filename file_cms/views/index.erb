<ul> 
  <% @files.each do |file| %>
 	<li><a href="/<%= file %>" class="no-decoration"><%= file %></a>&nbsp;
 		<a href="/<%= file %>/edit">Edit</a>
 		<form action="<%= file %>/delete" method="post">
 			<button type="submit">Delete</button>
 		</form>
 	</li>
  <% end %>
</ul>

<a href="/new">New Document</a>

<% if session[:username] %>
  <form method="post" action="/users/signout">
    <p>
  	  Signed in as <%= session[:username] %>
  	  <button type="submit">Sign Out</button>
    </p>
  </form>
<% else %>
  <p class="signin"><a href="/users/signin">Sign In</a></p>
<% end %>